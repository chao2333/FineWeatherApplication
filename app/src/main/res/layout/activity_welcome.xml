<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="310dp">

        <ImageView
            android:id="@+id/welcomeIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="155dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="155dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/welcomeWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcomeIcon"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/Welcomelayout1"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcomeWelcome"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal"

            android:layout_marginTop="0dp"
            android:text="@string/Welcomelayout2"
            android:textColor="@color/Welcomewhileblack"
            android:textSize="18sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="443dp"
        android:layout_gravity="bottom">


        <Button
            android:id="@+id/WelcomeButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="48dp"
            android:background="@drawable/welcome_nextbuttonbk"
            android:text="@string/Welcomelayoutnext"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/RefuseButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="48dp"
            android:layout_toStartOf="@+id/WelcomeButton"
            android:background="@drawable/welcome_nextbuttonbk"
            android:text="@string/Welcomelayoutrefuse"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_above="@+id/RefuseButton"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_horizontal"

            android:layout_marginBottom="100dp">

            <TextView
                android:id="@+id/welcome_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@+id/welcomeCheckBox"
                android:gravity="center_vertical"
                android:text="@string/Welcomelayoutpermission2"
                android:textColor="@color/Welcomewhileblack"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/welcome_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"

                android:layout_toEndOf="@+id/welcome_2"
                android:gravity="center_vertical"
                android:text="@string/Welcomelayoutpermission3"
                android:textColor="@color/setting_transfer"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/welcomeCheckBox"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"

                android:buttonTint="@drawable/checkbox_color"
                android:gravity="center_vertical"
                android:textColor="@color/Welcomewhileblack"
                android:textSize="18sp" />
        </RelativeLayout>


    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>