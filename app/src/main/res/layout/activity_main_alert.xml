<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="17dp"
    tools:context=".ui.MainAlertActivity">

    <RelativeLayout
        android:id="@+id/Location_back211"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/backMainActivity12"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/iconlocationback" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/LocationTop12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Location_back211">

        <TextView
            android:id="@+id/Airquality_TopTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:text="@string/alert_layout1"
            android:textColor="@color/Welcomewhileblack"
            android:textSize="32sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/alertlayout_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/alertlayout_title1"
            android:layout_width="180dp"
            android:layout_height="26dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:text="雷电黄色预警"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alertlayout_detail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="46dp"
            android:text="塔河县气象台2022年6月8日19时35分发布雷电黄色预警信号。塔河县已发生雷电活动，且可能持续，有出现雷电灾害事故的可能性。
    防御指南:
    1.政府及相关部门按照职责落实防雷应急措施；
    2.人员应当留在室内，并关好门窗；"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/alertlayout_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alertlayout_layout1">

        <TextView
            android:id="@+id/alertlayout_title2"
            android:layout_width="180dp"
            android:layout_height="26dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:text="雷电黄色预警"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alertlayout_detail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="46dp"
            android:text="塔河县气象台2022年6月8日19时35分发布雷电黄色预警信号。塔河县已发生雷电活动，且可能持续，有出现雷电灾害事故的可能性。
    防御指南:
    1.政府及相关部门按照职责落实防雷应急措施；
    2.人员应当留在室内，并关好门窗；"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>