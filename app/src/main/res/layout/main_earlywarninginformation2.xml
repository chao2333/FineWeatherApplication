<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/earlyWarningInformation2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:layout_marginTop="18dp">

    <RelativeLayout
        android:id="@+id/earlyWarningInformationlayout2"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/main_eralywarlywarninginformationbk"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/main_earlywarningb1_clickimage2"
            android:layout_width="match_parent"
            android:layout_height="94dp" />

        <TextView
            android:id="@+id/main_earlywarningb2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/main_earlywarningt2"
            android:layout_marginStart="17dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="17dp"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="15.5sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_earlywarningt2"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/main_earlywarningt2"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>